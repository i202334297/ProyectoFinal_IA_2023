	public Proyecto() {
		setResizable(false);
		setTitle("PrimaTaxi ® >>> MN-Global ® >>> Proyecto IA 2017 01 - 20/07/2018 - Tienda v1.0");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setSize(800, 600);
		this.setIconImage(new ImageIcon("imagenes/PT.png").getImage());
		this.setLocationRelativeTo(null);
		
		menuTienda = new JMenuBar();
		menuTienda.setBackground(new Color(51, 102, 153));
		setJMenuBar(menuTienda);
		
		mnArchivo = new JMenu("Archivo");
		mnArchivo.setForeground(Color.WHITE);
		menuTienda.add(mnArchivo);
		
		mntmSalir = new JMenuItem("Salir");
		mntmSalir.addActionListener(this);
		mnArchivo.add(mntmSalir);
		
		mnMantenimiento = new JMenu("Mantenimiento");
		mnMantenimiento.setForeground(Color.WHITE);
		menuTienda.add(mnMantenimiento);
		
		mntmConsultarMaleta = new JMenuItem("Consultar maleta");
		mntmConsultarMaleta.addActionListener(this);
		mnMantenimiento.add(mntmConsultarMaleta);
		
		mntmModificarMaleta = new JMenuItem("Modificar maleta");
		mntmModificarMaleta.addActionListener(this);
		mnMantenimiento.add(mntmModificarMaleta);
		
		mntmListarMaletas = new JMenuItem("Listar maletas");
